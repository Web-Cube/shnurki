{
    "build": {
        "html": "dist/",
        "js": "dist/app/js/",
        "css": "dist/app/css/",
        "img": "dist/app/img/",
        "attach": "dist/",
        "svg": "dist/app/icons/",
        "fonts": "dist/app/fonts/",
        "objects": "dist/app/objects/",
		"mail": ["dist/app/mail/**/.*", "dist/app/mail/**/*.*"]
    },
    "src": {
        "html": "src/pug/pages/**/*.pug",
        "js": "src/js/app.js",
        "css": "src/sass/**/*.scss",
        "img": "src/img/*.{jpg,png}",
        "objects": "src/objects/*.*",
        "attach": ["src/attach/**/.*", "src/attach/**/*.*"],
        "svg": "src/icons/**/*.svg",
        "fonts": "src/fonts/*.*"
    },
    "watch": {
        "html": "src/pug/**/*.pug",
        "js": "src/js/**/*.js",
        "css": "src/sass/**/*.scss",
        "img": "src/img/**/*.*",
        "svg": "src/icons/*.svg",
        "objects": "src/objects/**/*.*",
        "attach": ["src/attach/**/.*", "src/attach/**/*.*"],
		"mail": ["src/mail/**/.*", "src/mail/**/*.*"],
        "fonts": "src/fonts/**/*.*"
    } 	
}